@model IEnumerable<Monument_Scann.Areas.Admin.Models.touristspot>
@{
    ViewData["Title"] = "Alltouristspot";
}
<a href="#" id="return-to-top"><i class="icon-chevron-up"></i></a>
<div class="slajderi">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">

                <img class="d-block w-100" width="100%" height="600px" src="~/images/welcome.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block bg-info border-warning border">
                    <h5>Tourist Spot</h5>
                    <i>Kosovo</i>
                </div>
            </div>
            @foreach (var touristspot in Model)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/@touristspot.Image" width="100%" height="600px" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block bg-info border border-warning">
                        <h5>@touristspot.Title</h5>
                        <i>@touristspot.Citys</i>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<h1 class="text-xl-center m-5 pb-4">&#8595;</h1>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var touristspot in Model)
        {
            <div class="card shadow" style="width: 18rem;">
                <img class="card-img-top" src="~/images/@touristspot.Image" height="300px" alt="images">
                <div class="card-body">
                    <h5 class="card-title"> @touristspot.Title</h5>
                    <p class="card-text">Kosovo ka shum vende te tilla siq eshte edhe <i class="font-weight-bolder">"@touristspot.Title"</i></p>
                    <a asp-action="TouristSpotet" asp-route-id="@touristspot.Id" class="btn btn-primary">Shiqo me shume</a>
                </div>
            </div>
        }
    </div>
    <a asp-area="Admin" asp-action="Create" asp-controller="Reports" class="nav-link text-center text-danger mt-5 mb-2">Click to report something here!</a>
</div>




