
@model IndexViewModel


<a href="#" id="return-to-top"><i class="icon-chevron-up"></i></a>
<div class="slajderi">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">

                <img class="d-block w-100" width="100%" height="600px" src="~/images/welcome.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block bg-info border-warning border">
                    <h5>Monuments</h5>
                    <i>Kosovo</i>
                </div>
            </div>
            @foreach (var Monumentet in Model.Monumentet)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/@Monumentet.Image" width="100%" height="600px" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block bg-info border border-warning">
                        <h5>@Monumentet.Title</h5>
                        <i>@Monumentet.Citys</i>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>



<h1 class="text-xl-center m-5 pb-3">&#8595;</h1>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var Monumentet in Model.Monumentet)
        {
            <div class="card m-2   shadow" style="width: 18rem;">
                <img class="card-img-top" src="~/images/@Monumentet.Image" height="300px" alt="images">
                <div class="card-body">
                    <h5 class="card-title"> <i class="font-weight-bold">@Monumentet.Title</i>   </h5><p>@Monumentet.Citys</p>
                    <p class="card-text">Kosovo ka shum vende te tilla siq eshte edhe <i class="font-weight-bolder">"@Monumentet.Title"</i></p>
                    <a asp-action="Monumentet" asp-route-id="@Monumentet.Id" class="btn btn-primary">Shiqo me shume</a>
                </div>
            </div>
        }
    </div>
</div>
<a asp-area="Admin" asp-action="Create" asp-controller="Reports" class="nav-link text-center text-danger mt-5 mb-2">Click to report something here!</a>


@{
    var prevDisabled = !Model.Monumentet.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Monumentet.HasNextPage ? "disabled" : "";
}
<div class="container">
    <ul class="nav justify-content-center m-4">
        <li class="previous nav-item">
            <a asp-action="AllMonument"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-page="@(Model.Monumentet.PageAllMonument - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-outline-dark btn-lg pl-4 pr-4 mr-5 nav-link @prevDisabled">
                &#8592;Previous
            </a>
        </li>
        <li class="next nav-item">
            <a asp-action="AllMonument"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-page="@(Model.Monumentet.PageAllMonument + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-outline-dark btn-lg  pl-5 pr-5 ml-5 nav-link @nextDisabled">
                Next&#8594;
            </a>
        </li>
    </ul>
</div>